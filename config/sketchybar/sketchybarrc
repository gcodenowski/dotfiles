#!/bin/bash

# Colours config file
source "$CONFIG_DIR/colors.sh" # Loads defined colours

# This is a demo config to showcase some of the most important commands.
# It is meant to be changed and configured, as it is intentionally kept sparse.
# For a (much) more advanced configuration example see my dotfiles:
# https://github.com/FelixKratz/dotfiles

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
sketchybar --bar position=top      \
		 height=33         \
		 blur_radius=4    \
   		 color=0x40000000 \
		 sticky=on

##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items

default=(
  padding_left=5
  padding_right=5
  icon.font="SF Pro:Bold:17.0"
  label.font="SF Pro:Bold:14.0"
  icon.color=$ACCENT_COLOR
  label.color=$LABEL_COLOR
  background.corner_radius=5
  background.color=$ITEM_BG_COLOR
  background.height=24
  icon.padding_left=4
  icon.padding_right=4
  label.padding_left=4
  label.padding_right=4
)
sketchybar --default "${default[@]}"

# == Right Side Items == 

# Calendar
sketchybar --add item calendar right \
	   --set calendar update_freq=3600 \
	         script='sketchybar --set $NAME label="$(date "+%a %d %b")"' \
		 icon=􀉉 \

# Clock
sketchybar --add item clock right \
  	   --set clock update_freq=1 \
	         script='sketchybar --set $NAME label="$(date "+%H:%M:%S")"' \
		 icon=􀐫 \
		 clock icon.y_offset=1 \
		 label.width=75 \
		 label.font_smoothing=on

# == Item Order ==
sketchybar --reorder clock calendar


           #### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update

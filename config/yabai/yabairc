sudo yabai --load-sa

# Setting bsp (binary space partitioning) as base layout config
yabai -m config layout bsp

# Stack of float
yabai -m config window_placement second_child

# Padding
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# Mouse follows focus
yabai -m config mouse_follows_focus on

# Mouse
yabai -m config mouse_modifier alt
# LMB + drag
yabai -m config mouse_action1 move
# RMB + drag
yabai -m config mouse_action2 resize

# Apps excluded from yabai
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Proton VPN$" manage=off
yabai -m rule --add app="^Steam$" manage=off


# External bar padding
yabai -m config external_bar all:33:0

# Debug reporting
yabai -m config debug_output true

# Bootstrap janky borders
borders active_color=0xff94dcff inactive_color=0x00ffffff width=5.0 &
